<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
             />

        <EditText

            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:hint="SOURCE STATION CODE"
            android:textColor="#77C2E3"
            android:textColorHint="#DA6565"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:hint="DESTINATION SOURCE CODE"
            android:textColor="#77C2E3"
            android:textColorHint="#DA6565"
            android:textColorLink="#90C1D6"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="260dp"
            android:layout_marginTop="75dp"
            app:srcCompat="@drawable/arrow" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="180dp"
            android:backgroundTint="#938A8A"
            android:onClick="find"
            android:text="FIND!" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FAF6F6"
            android:cacheColorHint="#6986B5"
            android:foregroundTint="#F4EEEE"
            android:padding="20dp"
            android:theme="@style/CardView">


        </ListView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>